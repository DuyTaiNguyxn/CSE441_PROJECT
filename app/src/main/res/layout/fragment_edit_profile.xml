<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EditProfileFragment">

    <!-- Layout chính chứa các thông tin người dùng -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="16dp">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/iv_user_avatar"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Họ tên người dùng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Họ tên"
            android:textSize="14sp"
            android:textColor="#121212" />
        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nhập họ tên"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Số điện thoại -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Số điện thoại"
            android:textSize="14sp"
            android:textColor="#121212" />
        <EditText
            android:id="@+id/et_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nhập số điện thoại"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="phone" />

        <!-- Địa chỉ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Địa chỉ"
            android:textSize="14sp"
            android:textColor="#121212" />
        <EditText
            android:id="@+id/et_user_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nhập địa chỉ"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- Mật khẩu-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu hiện tại"
            android:textColor="#121212"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_user_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nhập mật khẩu hiện tại"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPassword" />

        <!-- Mật khẩu  -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới"
            android:textColor="#121212"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nhập mật khẩu mới"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPassword" />

        <!-- Nhập lại mật khẩu -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhập lại mật khẩu mới"
            android:textColor="#121212"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />

        <EditText
            android:id="@+id/et_user_password_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:hint="Nhập lại mật khẩu mới"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPassword"
            android:layout_marginTop="8dp" />

        <!-- Nút xác nhận -->
        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FED718"
            android:text="Xác nhận"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</FrameLayout>
